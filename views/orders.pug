extends layout

block content
  div(class=['w-full px-2 flex justify-center overflow-x-auto'])
    table(class=['table-auto mx-auto p-2 shadow-2xl md:px-4 '])
      thead
        tr
          th(class=['px-4 py-2']) Name
          th(class=['px-4 py-2']) Phone
          th(class=['px-4 py-2']) Transaction Ref4j 
          th(class=['px-4 py-2']) Items
          th(class=['px-4 py-2']) Address
          th(class=['px-4 py-2']) Action
      tbody
        for order in orders
          - var deleteOrder = '/deleteOrder?id='+order.id
          tr
            td(class=['border px-4 py-2']) #{order.fullname}
            td(class=['border px-4 py-2']) #{order.phone}
            td(class=['border px-4 py-2'])
              ul(class=['text-lg flex flex-wrap list-none font-normal p-2 text-left mx-1'])
                for item in order.items
                  li(class=['w-full p-1 text-sm'])
                    span(class=['font-semibold']) #{item.Product.product_name}
                    span(class=['font-normal mx-1'])
                      strong Quantity:
                      span #{item.quantity} 
            td(class=['border px-4 py-2']) #{order.transaction_ref}
            td(class=['border px-4 py-2']) #{order.address}
            td(class=['border px-4 py-2'])
              a(class=['bg-red-600 p-2 rounded-sm font-bold text-white mx-2'] href=deleteOrder) Delete
        
doctype html
html(class=['w-full h-full p-0 m-0'])
  head
    title Ecommerce Bot Admin | #{title}
    link(rel='stylesheet', href='/stylesheets/tailwind.css')
  body(class=['w-full h-full bg-gray-100 p-0 m-0'])
    nav(class=['w-full h-16 bg-white shadow-lg flex flex-nowrap justify-end'])
      if token
        a(href="/product" class=['h-full p-2 flex items-center justify-center text-sm md:text-md md:font-semibold text-green mx-2 hover:bg-gray-200']) 
          span Add Products
        a(href="/categories" class=['h-full p-2 flex items-center justify-center text-sm md:text-md md:font-semibold text-green mx-2 hover:bg-gray-200']) 
          span Add categories
      else
        a(href="/login" class=['h-full p-2 flex items-center justify-center text-sm md:text-md md:font-semibold text-green mx-2 hover:bg-gray-200']) 
          span Login
    block content

extends layout

block content
  div(class=['w-full px-2 flex justify-center overflow-x-auto'])
    table(class=['table-auto mx-auto p-2  shadow-2xl md:px-4'])
      thead
        tr
          th(class=['px-4 py-2']) Name
          th(class=['px-4 py-2']) Stock
          th(class=['px-4 py-2']) Actions
      tbody
        if error
          tr
            td #{error}
        else
          for product in products
            - var editRoute = '/editProduct?id='+product.id
            tr
              td(class=['border px-4 py-2']) #{product.product_name}
              td(class=['border px-4 py-2']) #{product.stock}
              td(class=['border px-4 py-2']) #{product.price}
              td(class=['border px-4 py-2'])
                a(class=['bg-green-600 p-2 rounded-sm font-bold text-white mx-2'] href=editRoute ) Edit
